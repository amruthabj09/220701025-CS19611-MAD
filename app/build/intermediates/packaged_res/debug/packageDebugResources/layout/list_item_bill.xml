<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="12dp"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bill Title -->
        <TextView
            android:id="@+id/textViewBillTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner at Café"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E3D58"
            android:letterSpacing="0.05"
            android:layout_marginBottom="6dp" />

        <!-- Split/Date Info -->
        <TextView
            android:id="@+id/textViewBillSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Split among 3 people - ₹600 total"
            android:textSize="15sp"
            android:textColor="#546E7A"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#B0BEC5" />

        <!-- Amount Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="start|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You paid:"
                android:textSize="15sp"
                android:textColor="#37474F"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textViewBillAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹200"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:layout_marginStart="4dp"
                android:letterSpacing="0.02" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
